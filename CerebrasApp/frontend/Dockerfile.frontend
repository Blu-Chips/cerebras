# Stage 1: Build
FROM node:18-alpine as build

WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .
ARG NODE_ENV
ENV NODE_ENV=$NODE_ENV
RUN npm run build

# Stage 2: Production
FROM node:18-alpine

WORKDIR /app
COPY --from=build /app/build ./build
COPY --from=build /app/package*.json ./

RUN npm install --production

EXPOSE 3000
CMD ["npm", "start"]